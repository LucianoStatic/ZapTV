<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/placeholder">

    <ImageView
        android:id="@+id/ivPosterPicture"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/stringPosterFilme"
        android:scaleType="centerCrop"
         app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_title"
        android:layout_marginTop="@dimen/margin_title"
        android:text="@string/title"
        android:textColor="@color/white_custom"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivPosterPicture"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDateDebut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_title"
        android:text="@string/date"
        android:textColor="@color/white_custom"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvReleaseDate"
        app:layout_constraintStart_toEndOf="@+id/ivPosterPicture" />

    <TextView
        android:id="@+id/tvReleaseDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_title"
        android:layout_marginBottom="4dp"
        android:text="@string/date"
        android:textColor="@color/teal_200"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivPosterPicture" />

</androidx.constraintlayout.widget.ConstraintLayout>